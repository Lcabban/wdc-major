doctype html
html(lang='en')
  head
    title title
    meta(charset='utf-8')
    link(rel='stylesheet', type='text/css', href='/stylesheets/login.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Black+Han+Sans')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
    script(src='/javascripts/hotel.js')
  body
    #fixed
      ul.header
        li#home.header
          a(href='index.html') Hotelz
        li.header
          a(href='account.html') #{username}
        li.header
          a(href='help.html') help
        li#search.header
          input(type='text', name='search', placeholder='Where do you want to go?')
    .container
      .wrapper
        .details.clearfix
          #dt Details
          #rm Rooms
          #rev Reviews
          #bk Bookings
        #detail
          label(for='desc')
            b Description:
          p#description  this is the description
          input#desc(type='text', placeholder='Enter Hotel Description', required='')
          br
          label(for='psw')
            b Password:
          p#password this is yous password
          input#psw(type='password', placeholder='Enter Password')
          br
          label(for='hname')
            b Hotel Name:
          p#hotelName this is yous hotel name
          input#hname(type='text', placeholder='Enter Hotel Name')
          br
          label(for='locn')
            b Location:
          p#location this is yous location
          input#locn(type='text', placeholder='Enter location', required='')
          br
          label(for='cont')
            b Phone Number:
          p#content this is yous phone number
          input#cont(type='text', placeholder='Enter Phone Number', required='')
          br
          label(for='email')
            b Email:
          p#userEmail this is yous email
          input#email(type='email', placeholder='Enter Email')
          br
          label(for='fac')
            b Facilities:
          input#fac(type='text', placeholder='Enter a Facility')
          button#detail-fac-add Add Facility
          #fac1
            ul
              li.fac-list fac 1
              li.fac-list fac 2
              li.fac-list fac 3
              li.fac-list fac 4
          br
          label(for='ii')
            b Important Information:
          input#ii(type='text', placeholder='Enter some important information: rules, reception times, etc...')
          button#detail-ii-add Add Important Information
          #ii1
            ul
              li.ii ii
              li.ii ii
              li.ii ii
              li.ii ii
          br
          br
          button#detail-edit Edit
          button#detail-save Save
        #rooms
          // Trigger/Open The Modal
          button#rooms-modal-Btn Open Modal
          #rooms-modal.modal
            // Modal content
            .modal-content
              span#close-rooms-modal Ã—
              label(for='Rname')
                b Room Name
              input#Rname(type='text', placeholder='Enter Room Name', required='')
              label(for='guests')
                b Guests
              input#guests(type='number', placeholder='Enter Number of Guests', min='1', required='')
              label(for='beds')
                b Beds
              input#beds(type='number', placeholder='Enter Number of Beds', min='1', required='')
              label(for='baths')
                b Bathrooms
              input#baths(type='number', placeholder='Enter Number of Bathtooms', min='1', required='')
              label(for='rdesc')
                b Description
              input#rdesc(type='text', placeholder='Enter Room Description', required='')
              button Add Room
          hr
          label
            b Rooms
          .room-list
            .room-list-titles
              label(for='Rname')
                b Room Name:  
              br
              label(for='guests')
                b Guests:     
              br
              label(for='beds')
                b Beds:       
              br
              label(for='baths')
                b Bathrooms:  
              br
              label(for='rdesc')
                b Description:
              br
            p.room_name room name
            p.quests 6
            p.beds 4
            p.baths 2
            p.description this is a short description of the room
        #reviews
          .review
            label
              b Rate:
            p n/5
            label
              b Comment:
            p this is a sample review comment
        #bookings
          .room_type
            ul
              li.room room 1
              li.room room 2
              li.room room 3
              li.room room 4
          .booking
            p.room_name room name
            p.name Name
            p.date_in date in
            p.date_out date out
